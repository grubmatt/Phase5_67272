<h3>Upcoming Shifts</h3>
<table class="table table-striped">
<thead>
  <tr>
    <th>Date</th>
    <th>Start Time</th>
    <th>End Time</th>
    <% if current_user.role?(:admin) %>
      <th>&nbsp;</th>
    <% end %>
    <th>&nbsp;</th>
  </tr>
</thead>
<tbody>
  <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.date.strftime("%m/%d/%y") %></td>
      <td><%= shift.start_time.strftime("%I:%M %p") %></td>
      <td><%= shift.end_time.strftime("%I:%M %p") %></td>
      <% if can? :update, Shift %>
        <td><%= link_to(edit_shift_path(shift), class: 'button tiny radius warning') do %>
        &nbsp;Edit&nbsp;
        <% end %></td>
      <% end %>
      <td><%= link_to(shift_path(shift), class: 'button tiny radius') do %>
      &nbsp;View&nbsp;
      <% end %></td>
    </tr>
  <% end %>
</tbody>
</table>
<%= will_paginate @shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  