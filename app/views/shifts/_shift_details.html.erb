<h3>Shift Details</h3>
<br />

<% if current_user.role?(:admin) %>
  <p>
    <b>Store</b>: <%= link_to @shift.assignment.store.name, store_path(shift.assignment.store) %>
  </p>
<% end %>

<% if current_user.role?(:manager) %>
  <p>
    <b>Employee</b>: <%= link_to @shift.assignment.employee.name, employee_path(@shift.assignment.employee) %>
  </p>
<% end %>

<p>
  <b>Date</b>: <%= @shift.date.strftime("%m/%d/%y") %>
</p>

<p>
  <b>Start Time</b>: <%= @shift.start_time.strftime("%I:%M %p") %>
</p>

<p>
  <b>End Time</b>: <%= @shift.end_time.strftime("%I:%M %p") %>
</p>

<p>
  <b>Notes</b>: <%= @shift.notes == nil ?  "None" : @shift.notes %>
</p>