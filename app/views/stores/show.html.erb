<div class="row">
  <div class="small-7 columns">
    <%= render partial: "store_details" %>
  </div>
  <div class="small-5 columns">
    <%= render partial: "store_flavors" unless @current_flavors.empty? %>
    <% if (can? :create, StoreFlavor) & (current_user != nil) %>
  	  <% if current_user.store_id == @current_flavors.first.store_id %>
        <%= link_to(new_store_flavor_path, class: 'button radius') do %>
          &nbsp;<%= "Add Flavor" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Add buttons to list all, edit project or destroy object -->
<%= render partial: "partials/object_options", locals: {model_name: "store", object: @store}  %>