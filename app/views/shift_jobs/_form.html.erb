<%= simple_form_for @shift_job, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift Job</legend>
    
    <%= f.input :shift_id, default: @shift.id, input_html: {class: "avg"} %>
    <%= f.input :job_id, :collection => Job.active.alphabetical, input_html: {class: "avg"} %>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', shift_path(@shift), :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>